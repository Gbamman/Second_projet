
{% extends 'confplan/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
           <li>  {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li class="active">{{'plancomptable.name'|trans(arguments = {}, domain = 'plancomptable')}}</li>
            <li class="active">{{'plancomptable.showview.title'|trans(arguments = {}, domain = 'plancomptable')}}</li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'plancomptable.newview.title'|trans(arguments = {}, domain = 'plancomptable')}}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('plan_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}}  </b></a>
            </div>
        </div>

        <br>
        <div class="well">
            {{ form_start(form) }}
            <div class="row">
                 <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confplan_codePlan">{{'plancomptable.newview.form.labelplan'|trans(arguments = {}, domain = 'plancomptable')}}</label>
                        {{ form_widget(form.codePlan, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.codePlan) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confplan_compteCapitalSocial">{{'plancomptable.newview.form.labelcomptecapitalsocial'|trans(arguments = {}, domain = 'plancomptable')}}</label>
                        {{ form_widget(form.compteCapitalSocial, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.compteCapitalSocial) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confplan_societe">{{'plancomptable.newview.form.labelsociete'|trans(arguments = {}, domain = 'plancomptable')}}</label>
                        {{ form_widget(form.societe, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.societe) }}</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confplan_compteResultatInstanceDistribution">{{'plancomptable.newview.form.labelinstanceresultat'|trans(arguments = {}, domain = 'plancomptable')}}</label>
                        {{ form_widget(form.compteResultatInstanceDistribution, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.compteResultatInstanceDistribution) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">

                        <label class="control-label"  for="configbundle_confplan_compteBenefice">{{'plancomptable.newview.form.labelcomptebenefice'|trans(arguments = {}, domain = 'plancomptable')}}</label>
                        {{ form_widget(form.compteBenefice, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.compteBenefice) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confplan_comptePerte">{{'plancomptable.newview.form.labelcompteperte'|trans(arguments = {}, domain = 'plancomptable')}}</label>
                        {{ form_widget(form.comptePerte, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.comptePerte) }}</span>
                    </div>
                </div>
            </div>
           <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confplan_designation">{{'plancomptable.newview.form.labeldesignation'|trans(arguments = {}, domain = 'plancomptable')}}</label>
                        {{ form_widget(form.designation, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.designation) }}</span>
                    </div>
                </div>  

            </div>
          
            {#{ form_widget(form) }#}
            {{ form_rest(form) }}

            <button class="btn btn-success"  type="submit" > <span class="glyphicon  glyphicon-saved"></span> {{'crud.savebtnlabel'|trans(arguments = {}, domain = 'crud')}}  </button>
            {#<input  type="submit" value="Create" />#}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}


