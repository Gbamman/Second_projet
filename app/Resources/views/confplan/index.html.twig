{% extends 'confplan/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li>  {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li class="active">{{'plancomptable.name'|trans(arguments = {}, domain = 'plancomptable')}}</li>
        </ol>
    </div>
{% endblock %}
