        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('plan_new') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-plus-sign"></span> <b> {{'plancomptable.indexview.addbtnlabel'|trans(arguments = {}, domain = 'plancomptable')}}</b></a>
