{% extends 'confagence/template.html.twig' %}

    {% block breadcrumb %}
        <div class="container">
            <ol class="breadcrumb">
               <li>  {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
              <li class="active">{{'agence.name'|trans(arguments = {}, domain = 'agence')}}</li>
            </ol>
        </div>
    {% endblock %}
{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'agence.indexview.addbtnlabel'|trans(arguments = {}, domain = 'agence')}}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('agence_new') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-plus-sign"></span> <b> {{'agence.indexview.addbtnlabel'|trans(arguments = {}, domain = 'agence')}} </b></a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <input class="form-control" type="text" placeholder="{{'agence.indexview.table.searchformlabel'|trans(arguments = {}, domain = 'agence')}}">
            </div>
        </div>
        <br>
        <div id="div_tableau_liste_agence">
            {% include 'confagence/include/tableau.html.twig' with  {'confAgences': confAgences} %}
        </div>
    </div>
   </div>
{% endblock %}
