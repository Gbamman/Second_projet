{% extends 'confagence/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li class="active"> {{'agence.name'|trans(arguments = {}, domain = 'agence')}}  </li>
            <li class="active"> {{'agence.editview.title'|trans(arguments = {}, domain = 'agence')}}</li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'agence.editview.title'|trans(arguments = {}, domain = 'agence')}}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('agence_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>   {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}}  </b></a>
            </div>
        </div>

        <br>
        <div class="well">
            {{ form_start(edit_form) }}
             <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confagence_code">{{'agence.newview.form.labelcode'|trans(arguments = {}, domain = 'agence')}} </label>
                        {{ form_widget(edit_form.code, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(edit_form.code) }}</span>
                    </div>
                </div>
                 <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confagence_libelle">{{'agence.newview.form.labellibelle'|trans(arguments = {}, domain = 'agence')}}</label>
                        {{ form_widget(edit_form.libelle, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(edit_form.libelle) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confagence_societe">{{'agence.newview.form.labelsociete'|trans(arguments = {}, domain = 'agence')}}</label>
                        {{ form_widget(edit_form.societe, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(edit_form.societe) }}</span>
                    </div>
                </div>
            </div>
            {#<div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confagence_libelle">{{'agence.newview.form.labellibelle'|trans(arguments = {}, domain = 'agence')}}</label>
                        {{ form_widget(form.libelle, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.libelle) }}</span>
                    </div>
                </div>
            </div>
            <!-- <div class="row">
                
            </div>-->#}
             
            {#{ form_widget(form) }#}
            {{ form_rest(edit_form) }}

            <button class="btn btn-success"  type="submit" > <span class="glyphicon  glyphicon-saved"></span> {{'crud.editbtnlabel'|trans(arguments = {}, domain = 'crud')}} </button>
            {#<input  type="submit" value="Create" />#}
            {{ form_end(edit_form) }}
        </div>
    </div>
</div>
{% endblock %}
