{% extends 'confjournal/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li class="active"> {{'journal.name'|trans(arguments = {}, domain = 'journal')}}  </li>
          </ol>
    </div>
{% endblock %}
{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'journal.indexview.title'|trans(arguments = {}, domain = 'journal')}}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('journal_new') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-plus-sign"></span> <b> {{'journal.indexview.addbtnlabel'|trans(arguments = {}, domain = 'journal')}}</b></a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <input class="form-control" type="text" placeholder="{{'journal.indexview.table.searchformlabel'|trans(arguments = {}, domain = 'journal')}}">
            </div>
        </div>
        <br>
       <!--<h1>Liste des compte comptables plans </h1> -->
       <div id="div_tableau_liste_journaux">
            {% include 'confjournal/include/tableau.html.twig' with  {'confJournals': confJournals} %}
        </div>
         <!--  <ul>
       <li>
           <a href="{#{ path('confjournal_new') }#}">Create a new confjournal</a>
       </li>
   </ul> -->
    </div>
    </div>

{% endblock %}
