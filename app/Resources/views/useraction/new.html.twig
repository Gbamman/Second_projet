{% extends 'useraction/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.admin'|trans(arguments = {}, domain = 'menu')}} </li>
            <li> {{'action.name'|trans(arguments = {}, domain = 'action')}}  </li>
            <li class="active"> {{'action.newview.title'|trans(arguments = {}, domain = 'action')}}  </li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'action.newview.title'|trans(arguments = {}, domain = 'action')}}  </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('action_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
        </div>

        <br>
        <div class="well">

    {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label"  for="userbundle_useraction_libelle">{{'action.newview.form.labellibelle'|trans(arguments = {}, domain = 'action')}}  </label>
                        {{ form_widget(form.libelle, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.libelle) }}</span>
                    </div>
                </div>
            </div>
        {#{ form_widget(form) }#}
            {{ form_rest(form) }}
            <button class="btn btn-success"  type="submit" > <span class="glyphicon  glyphicon-saved"></span> {{'crud.savebtnlabel'|trans(arguments = {}, domain = 'crud')}} </button>
    {{ form_end(form) }}
        </div>
    </div>
</div>

   {# <ul>
        <li>
            <a href="{{ path('action_index') }}">Back to the list</a>
        </li>
    </ul>#}
{% endblock %}
