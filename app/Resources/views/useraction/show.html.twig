{% extends 'useraction/template.html.twig' %}

{% block breadcrumb %}
<div class="container">
    <ol class="breadcrumb">
        <li> {{'menu.dashboard.admin'|trans(arguments = {}, domain = 'menu')}} </li>
        <li> {{'action.name'|trans(arguments = {}, domain = 'action')}}  </li>
        <li class="active"> {{'action.showview.title'|trans(arguments = {}, domain = 'action')}}  </li>
    </ol>
</div>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading main-color-bg">
            <h3 class="panel-title">{{'action.showview.title'|trans(arguments = {}, domain = 'action')}} :  <b>{{ userAction.libelle }}</b> </h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <a type="button" href="{{ path('action_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}}  </b></a>
                </div>
                <div class="col-md-3">
                    <a type="button" href="{{ path('action_edit', { 'id': userAction.id }) }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-pencil"></span> <b>  {{'crud.editbtnlabel'|trans(arguments = {}, domain = 'crud')}}   </b></a>
                </div>
            </div>

            <br>
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>{{ 'action.indexview.table.libelle'|trans(arguments = {}, domain = 'action') }} </th>
                    <td>{{ userAction.libelle }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
