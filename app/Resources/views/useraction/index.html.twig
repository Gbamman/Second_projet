{% extends 'useraction/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.admin'|trans(arguments = {}, domain = 'menu')}} </li>
            <li class="active"> {{'action.name'|trans(arguments = {}, domain = 'action')}}  </li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'action.indexview.title'|trans(arguments = {}, domain = 'action')}} </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('action_new') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-plus-sign"></span> <b> {{'action.indexview.addbtnlabel'|trans(arguments = {}, domain = 'action')}} </b></a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <input class="form-control" type="text" placeholder="{{'action.indexview.table.searchformlabel'|trans(arguments = {}, domain = 'action')}}">
            </div>
        </div>
        <br>

        <div id="div_tablo_liste_action">
            {% include 'useraction/include/tableau.html.twig' with  {'userActions': userActions} %}
        </div>


    </div>
    </div>
        {# <ul>
             <li>
                 <a href="{{ path('action_new') }}">Create a new userAction</a>
             </li>
         </ul>#}
{% endblock %}
