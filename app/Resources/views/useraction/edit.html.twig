{% extends 'useraction/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.admin'|trans(arguments = {}, domain = 'menu')}} </li>
            <li> {{'action.name'|trans(arguments = {}, domain = 'action')}}  </li>
            <li class="active"> {{'action.editview.title'|trans(arguments = {}, domain = 'action')}}  </li>
        </ol>
    </div>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading main-color-bg">
            <h3 class="panel-title">{{'action.editview.title'|trans(arguments = {}, domain = 'action')}}  </h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <a type="button" href="{{ path('action_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>   {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}}  </b></a>
                </div>
            </div>

            <br>
            <div class="well">
                {{ form_start(edit_form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label"  for="configbundle_confsociete_codeSociete">{{'action.newview.form.labellibelle'|trans(arguments = {}, domain = 'action')}} </label>
                            {{ form_widget(edit_form.libelle, {'attr' : {'class' : 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.libelle) }}</span>
                        </div>
                    </div>
                    </div>

                {#{ form_widget(form) }#}
                {{ form_rest(edit_form) }}

                <button class="btn btn-success"  type="submit" > <span class="glyphicon  glyphicon-saved"></span> {{'crud.editbtnlabel'|trans(arguments = {}, domain = 'crud')}} </button>
                {#<input  type="submit" value="Create" />#}
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

{% endblock %}
