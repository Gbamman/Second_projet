{% extends 'confformule/template.html.twig' %}


    {% block breadcrumb %}
        <div class="container">
            <ol class="breadcrumb">
               <li>  {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
              <li class="active">{{'formule.name'|trans(arguments = {}, domain = 'formule')}}</li>
            </ol>
        </div>
    {% endblock %}
{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'formule.indexview.addbtnlabel'|trans(arguments = {}, domain = 'formule')}}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('formule_new') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-plus-sign"></span> <b> {{'formule.indexview.addbtnlabel'|trans(arguments = {}, domain = 'formule')}} </b></a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <input class="form-control" type="text" placeholder="{{'formule.indexview.table.searchformlabel'|trans(arguments = {}, domain = 'formule')}}">
            </div>
        </div>
        <br>
        <div id="div_tableau_liste_formule">
            {% include 'confformule/include/tableau.html.twig' with  {'confFormules': confFormules} %}
        </div>
    </div>
   </div>
{% endblock %}
