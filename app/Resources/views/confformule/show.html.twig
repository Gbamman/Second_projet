{% extends 'confformule/template.html.twig' %}
{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li> {{'formule.name'|trans(arguments = {}, domain = 'formule')}}  </li>
            <li class="active"> {{'formule.showview.title'|trans(arguments = {}, domain = 'formule')}}  </li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'formule.showview.title'|trans(arguments = {}, domain = 'formule')}} </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('formule_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>{{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
            <div class="col-md-3">
                <a type="button" href="{{ path('formule_edit', { 'id': confFormule.id }) }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-pencil"></span> <b> {{'crud.editbtnlabel'|trans(arguments = {}, domain = 'crud')}}  </b></a>
            </div>
        </div>

        <br>
    <table class="table table-bordered">
        <tbody>
             <tr>
                <th>Id</th>
                <td>{{ confFormule.id }}</td>
            </tr>
            <tr>
                <th>{{'formule.indexview.table.codeformule'|trans(arguments = {}, domain = 'formule') }}</th>
                <td>{{ confFormule.codeFormule }}</td>
            </tr>
            <tr>
                <th>{{'formule.indexview.table.libelleunique'|trans(arguments = {}, domain = 'formule') }}</th>
                <td>{{ confFormule.libelleUnique }}</td>
            </tr>
            <tr>
                <th>{{'formule.indexview.table.description'|trans(arguments = {}, domain = 'formule') }}</th>
                <td>{{ confFormule.description }}</td>
            </tr>
            <tr>
                <th>{{ 'crud.created'|trans(arguments = {}, domain = 'crud') }} </th>
                <td>{% if confFormule.supprimer %}Yes{% else %}No{% endif %}</td>
            </tr>

        </tbody>
    </table>
    </div>
</div>

{% endblock %}