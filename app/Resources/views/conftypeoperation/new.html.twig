{% extends 'conftypeoperation/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li> {{'typeoperation.name'|trans(arguments = {}, domain = 'typeoperation')}}  </li>
            <li class="active"> {{'typeoperation.newview.title'|trans(arguments = {}, domain = 'typeoperation')}}  </li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'typeoperation.newview.title'|trans(arguments = {}, domain = 'typeoperation')}}  </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('typeoperation_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
        </div>

        <br>
        <div class="well">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_conftypeoperation_codeTypeOperation">{{'typeoperation.newview.form.labelcodetypeoperation'|trans(arguments = {}, domain = 'typeoperation')}}  </label>
                        {{ form_widget(form.codeTypeOperation, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.codeTypeOperation) }}</span>
                    </div>
                </div>
                </div>
                <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_conftypeoperation_libelle">{{'typeoperation.newview.form.labellibelle'|trans(arguments = {}, domain = 'typeoperation')}}  </label>
                        {{ form_widget(form.libelle, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.libelle) }}</span>
                    </div>
                </div>
            </div>
          
            {#{ form_widget(form) }#}
            {{ form_rest(form) }}

            <button class="btn btn-success"  type="submit" > <span class="glyphicon  glyphicon-saved"></span> {{'crud.savebtnlabel'|trans(arguments = {}, domain = 'crud')}} </button>
            {#<input  type="submit" value="Create" />#}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

