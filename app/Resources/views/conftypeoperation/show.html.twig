{% extends 'conftypeoperation/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
              <li> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li class="active"> {{'typeoperation.name'|trans(arguments = {}, domain = 'typeoperation')}}  </li>
            <li class="active"> {{'typeoperation.showview.title'|trans(arguments = {}, domain = 'typeoperation')}}</li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'typeoperation.showview.title'|trans(arguments = {}, domain = 'typeoperation')}}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('typeoperation_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
            <div class="col-md-3">
                <a type="button" href="{{ path('typeoperation_edit', { 'id': confTypeOperation.id }) }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-pencil"></span> <b> {{'crud.editbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
        </div>

        <br>
    <table class="table table-bordered">
        <tbody>
           
            <tr>
                <th>{{'typeoperation.indexview.table.codetypeoperation'|trans(arguments = {}, domain = 'typeoperation') }}</th>
                <td>{{ confTypeOperation.codeTypeOperation }}</td>
            </tr>
            <tr>
                <th>{{'typeoperation.indexview.table.libelle'|trans(arguments = {}, domain = 'typeoperation') }}</th>
                <td>{{ confTypeOperation.libelle }}</td>
            </tr>
            <tr>
                  <th>{{'crud.delete'|trans(arguments = {}, domain = 'crud')}}</th>
                <td>
                    {% if confTypeOperation.supprimer %} <span class="glyphicon glyphicon-remove"></span> {% else %} <span class="glyphicon glyphicon-ok"></span>{% endif %}
                    </td>
            </tr>
        </tbody>
    </table>
