{% extends 'confnatureoperation/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> Paramétrage </li>
            <li class="active">Nature opération</li>
            <li class="active"> Détails sur la nature opération</li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Details de la nature d'opération</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('natureoperation_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  Retour à la liste  </b></a>
            </div>
            <div class="col-md-3">
                <a type="button" href="{{ path('natureoperation_edit', { 'id': confNatureOperation.id }) }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-pencil"></span> <b> Modifier  </b></a>
            </div>
        </div>

        <br>
    <h1>Configuration de la nature opération</h1>

    <table class="table table-bordered">
        <tbody>
           
             <tr>
                <th>Code nature operation</th>
                <td>{{ confNatureOperation.codeNatureOperation }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ confNatureOperation.designation }}</td>
            </tr>
            <tr>
                <th>Num ordre</th>
                <td>{{ confNatureOperation.numOrdre }}</td>
            </tr>
            <tr>
                <th>Supprimer</th>
                <td>{% if confNatureOperation.supprimer %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

