{% extends 'confcomptecomptableplan/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
              <li> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li class="active"> {{'comptecomptableplan.name'|trans(arguments = {}, domain = 'comptecomptableplan')}}  </li>
            <li class="active"> {{'comptecomptableplan.showview.title'|trans(arguments = {}, domain = 'comptecomptableplan')}}</li>
        </ol>
    </div>
{% endblock %}

{% block content %}

<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'comptecomptableplan.showview.title'|trans(arguments = {}, domain = 'comptecomptableplan')}} :  <b>{{ confCompteComptablePlan.description }}</b> </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('comptecomptableplan_index', {'page' : 1}) }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
            <div class="col-md-3">
                <a type="button" href="{{ path('comptecomptableplan_edit', { 'id': confCompteComptablePlan.id }) }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-pencil"></span> <b> {{'crud.editbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
        </div>
        <br>
    <table class="table table-bordered">
        <tbody>
           
            <tr>
                <th>{{'comptecomptableplan.indexview.table.compte'|trans(arguments = {}, domain = 'comptecomptableplan') }}</th>
                <td>{{ confCompteComptablePlan.numCompteComptable }}</td>
            </tr>
            <tr>
                <th>{{'comptecomptableplan.indexview.table.sens'|trans(arguments = {}, domain = 'comptecomptableplan') }}</th>
                <td>{{ confCompteComptablePlan.sensAugmentation }}</td>
            </tr>
            <tr>
                <th>{{'comptecomptableplan.indexview.table.description'|trans(arguments = {}, domain = 'comptecomptableplan') }}</th>
                <td>{{ confCompteComptablePlan.description }}</td>
            </tr>
            <tr>
                <th>{{'comptecomptableplan.indexview.table.suppression'|trans(arguments = {}, domain = 'comptecomptableplan') }}</th>
                <td>{% if confCompteComptablePlan.supprimer %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>{{'comptecomptableplan.indexview.table.estespece'|trans(arguments = {}, domain = 'comptecomptableplan') }}</th>
                <td>{% if confCompteComptablePlan.espece %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>{{'comptecomptableplan.indexview.table.creation'|trans(arguments = {}, domain = 'comptecomptableplan') }}</th>
                <td>{% if confCompteComptablePlan.created %}{{ confCompteComptablePlan.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

