        <li>
            <a href="{{ path('comptecomptableplan_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('comptecomptableplan_edit', { 'id': confCompteComptablePlan.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>#}
    </div>
</div>

{% endblock %}
