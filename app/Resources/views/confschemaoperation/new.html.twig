{% extends 'confschemaoperation/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}} </li>
            <li> {{'schemaoperation.name'|trans(arguments = {}, domain = 'schemaoperation')}}  </li>
            <li class="active"> {{'schemaoperation.newview.title'|trans(arguments = {}, domain = 'schemaoperation')}}  </li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'schemaoperation.newview.title'|trans(arguments = {}, domain = 'schemaoperation')}}  </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('schemaoperation_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}} </b></a>
            </div>
        </div>

        <br>
        <div class="well">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confschemaoperation_codeSchema">{{'schemaoperation.newview.form.labelcodeschema'|trans(arguments = {}, domain = 'schemaoperation')}}  </label>
                        {{ form_widget(form.codeSchema, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.codeSchema) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confschemaoperation_nbrEtape">{{'schemaoperation.newview.form.labelnbretape'|trans(arguments = {}, domain = 'schemaoperation')}}  </label>
                        {{ form_widget(form.nbrEtape, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.nbrEtape) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                   <div class="form-group">
                        <label class="control-label"  for="configbundle_confschemaoperation_societe">{{'schemaoperation.newview.form.labelsociete'|trans(arguments = {}, domain = 'schemaoperation')}}  </label>
                        {{ form_widget(form.societe, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.societe) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confschemaoperation_journal">{{'schemaoperation.newview.form.labeljournal'|trans(arguments = {}, domain = 'schemaoperation')}}  </label>
                        {{ form_widget(form.journal, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.journal) }}</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confschemaoperation_typeOperation">{{'schemaoperation.newview.form.labeltypeoperation'|trans(arguments = {}, domain = 'schemaoperation')}}  </label>
                        {{ form_widget(form.typeOperation, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.typeOperation) }}</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label"  for="configbundle_confschemaoperation_designation">{{'schemaoperation.newview.form.labeldesignation'|trans(arguments = {}, domain = 'schemaoperation')}}  </label>
                        {{ form_widget(form.designation, {'attr' : {'class' : 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.designation) }}</span>
                    </div>
                </div>
            </div>


            {#{ form_widget(form) }#}
            {{ form_rest(form) }}

            <button class="btn btn-success"  type="submit" > <span class="glyphicon  glyphicon-saved"></span> {{'crud.savebtnlabel'|trans(arguments = {}, domain = 'crud')}} </button>
            {#<input  type="submit" value="Create" />#}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}