{% extends 'confsociete/template.html.twig' %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li> {{'menu.dashboard.admin'|trans(arguments = {}, domain = 'menu')}} </li>
            <li> {{'societe.name'|trans(arguments = {}, domain = 'societe')}}  </li>
            <li class="active"> {{'societe.showview.title'|trans(arguments = {}, domain = 'societe')}}  </li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">{{'societe.showview.title'|trans(arguments = {}, domain = 'societe')}} :  <b>{{ confSociete.description }}</b> </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <a type="button" href="{{ path('societe_index') }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-arrow-left"></span> <b>  {{'crud.backbtnlabel'|trans(arguments = {}, domain = 'crud')}}  </b></a>
            </div>
            <div class="col-md-3">
                <a type="button" href="{{ path('societe_edit', { 'id': confSociete.id }) }}" class="btn main-new-action-bg"> <span class="glyphicon glyphicon-pencil"></span> <b>  {{'crud.editbtnlabel'|trans(arguments = {}, domain = 'crud')}}   </b></a>
            </div>
        </div>

        <br>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{{ 'societe.indexview.table.code'|trans(arguments = {}, domain = 'societe') }} </th>
                <td>{{ confSociete.codeSociete }}</td>
            </tr>
            <tr>
                <th>{{ 'societe.indexview.table.sigle'|trans(arguments = {}, domain = 'societe') }}</th>
                <td>{{ confSociete.sigle }}</td>
            </tr>
            <tr>
                <th> {{ 'societe.indexview.table.description'|trans(arguments = {}, domain = 'societe') }} </th>
                <td>{{ confSociete.description }}</td>
            </tr>
            <tr>
                <th>{{ 'crud.created'|trans(arguments = {}, domain = 'crud') }} </th>
                <td>{% if confSociete.created %}{{ confSociete.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>

        </tbody>
    </table>
    </div>
</div>

{% endblock %}
