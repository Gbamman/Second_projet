
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"> {{'menu.dashboard.application'|trans(arguments = {}, domain = 'menu')}} </a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li id="nav_administration"><a href="{{ path('societe_index') }}"> {{'menu.dashboard.admin'|trans(arguments = {}, domain = 'menu')}}</a></li>
                 <li id="nav_parametrage"><a href="{{ path('plan_index') }}"> {{'menu.dashboard.param'|trans(arguments = {}, domain = 'menu')}}</a></li>
                <li id="nav_etat"><a href="#"> {{'menu.dashboard.etat'|trans(arguments = {}, domain = 'menu')}}</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">

                <li><a href="#">{{ 'menu.nav.welcome'|trans(arguments={}, domain ='menu') }} {{ app.user.username }} </a></li>
                <li><a href="{{ path('logout') }}"> <span class="glyphicon glyphicon-log-out " aria-hidden="true"></span> {{ 'menu.nav.logout'|trans(arguments={}, domain='menu') }} </a></li>

                <li style="margin-top: 5px;">

                <div class="btn-group">
                    <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {% if app.request.locale == 'fr' %}
                        Français
                        {% elseif app.request.locale == 'en' %}
                            English
                        {% endif %}
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        {% set routeName = app.request.attributes.get("_route") %}
                        {% set routeParams = app.request.attributes.get("_route_params") %}
                        {% if app.request.locale == 'fr' %}
                            <li role="presentation" class="main-menu-actif"><a role="menuitem" tabindex="-1" href="">Français</a></li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="{{path(routeName, routeParams|merge({"_locale": 'en'}))}}">English</a></li>
                        {% elseif app.request.locale == 'en' %}
                            <li role="presentation" ><a role="menuitem" tabindex="-1" href="{{path(routeName, routeParams|merge({"_locale": 'fr'}))}}">Français</a></li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation" class="main-menu-actif" ><a role="menuitem" tabindex="-1" href="">English</a></li>
                        {% endif %}
                    </ul>
                </div>
                </li>
            </ul>
        </div>
    </div>
