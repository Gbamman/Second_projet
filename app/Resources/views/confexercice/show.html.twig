{% extends 'base.html.twig' %}

{% block body %}
    <h1>Confexercice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ confExercice.id }}</td>
            </tr>
            <tr>
                <th>Encours</th>
                <td>{% if confExercice.enCours %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if confExercice.created %}{{ confExercice.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Supprimer</th>
                <td>{% if confExercice.supprimer %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('exercice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('exercice_edit', { 'id': confExercice.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
